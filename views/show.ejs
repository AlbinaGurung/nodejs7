            <label for="subTitle">Subtitle</label>
           <input type="text" class="form-input-box" name="subTitle" id="subTitle" value="<%=blog.subTitle%>" required>
        </div>
        <div class="form-input">
            <label for="Description">Description</label>
            <input type="text" class="form-input-box" name="description" id="description" value="<%= blog.description%>" required>
        </div>
        <div class="form-input">
            <label for="Image">Image</label>
            <input type="file" class="form-input-box" name="Image" id="Image" value="<%=blog.imageUrl%>">
            
        </div>
        <div>
         <button type="submit" class="button" style="background-color: lightgreen;">Update</button></a> 
