   <div class="container">
    <form action="/blog/<%= blog.id %>/update" method="POST" enctype="multipart/form-data">
        <h1 style="text-align: center;">Here you can update or delete this blog</h1>
        <div class="form-input">
            <label for="Title">Title</label>
            <input type="text" class="form-input-box" name="title" id="title" value="<%=blog.title%>" required>
        </div>
